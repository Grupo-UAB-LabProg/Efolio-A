{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Compilar",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/ui/menu.c",
				"${workspaceFolder}/sgbd/sgbd.c",
				"${workspaceFolder}/sgbd/alunos.c",
				"${workspaceFolder}/sgbd/ucs.c",
                "${workspaceFolder}/sgbd/inscricoes.c",
                "${workspaceFolder}/sgbd/ficheiros.c",
                "-o",
                "${workspaceFolder}/dist/efolio"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ]
}